<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= picture.name %></h1>
            <div style="width: 30%; margin: 25px auto">
                <form action="/pictures/<%= picture._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="author">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        
                    </div>
                    <a href="/pictures">Go back</a>
                </form>
                   
            </div>
        
    </div>
</div>
<% include ../partials/footer %>